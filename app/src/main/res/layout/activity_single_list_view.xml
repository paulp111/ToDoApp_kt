<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/list_header_panel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/dark_violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back_button"
            android:src="@drawable/icon_arrow_back"
            android:contentDescription="@string/back_to_main"
            android:scaleType="centerInside"
            android:background="@color/dark_violet"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_name"
            android:gravity="center"
            android:padding="16dp"
            android:text="List Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/dark_violet"
            android:layout_marginStart="56dp" />

    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_item_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/list_header_panel"
        app:layout_constraintBottom_toTopOf="@id/footer_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Footer Layout -->

    <LinearLayout
        android:id="@+id/footer_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/dark_violet"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_item_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/add_item_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/icon_add_item"
            android:scaleType="centerInside"
            android:contentDescription="@string/add_item"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_completed_items_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_delete"
        android:scaleType="centerInside"
        android:contentDescription="@string/delete_done_item"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@id/footer_panel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
